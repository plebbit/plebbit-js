{
    "compilerOptions": {
        "outDir": "../dist/node",
        "module": "ES2022",
        "declaration": true,
        "target": "ES2021",
        "lib": ["ES2021"],
        "moduleResolution": "Bundler",
        "customConditions": ["node"],
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "noImplicitOverride": true
    },
    "include": ["../src/**/*"],
    "exclude": ["../node_modules"]
}
