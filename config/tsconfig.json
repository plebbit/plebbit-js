{
    "compilerOptions": {
        "outDir": "../dist/node",
        "module": "ES2020",
        "declaration": true,
        "target": "ES2020",
        "moduleResolution": "Bundler",
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitOverride": true
    },
    "include": ["../src/**/*"],
    "exclude": ["../node_modules"]
}
