{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "runtimeVersion": "18",
            "runtimeArgs": ["--es-module-specifier-resolution", "node"],
            "name": "Generate .vscode/launch.json",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/.temp/generate_launch_json.cjs",
            "console": "integratedTerminal",
            "env": {
                "DEBUG": "plebbit-js:*, -plebbit*trace",
                "USE_RPC": "1"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "runtimeVersion": "18",
            "runtimeArgs": ["--es-module-specifier-resolution", "node"],
            "name": "Launch current file with NodeJS",
            "skipFiles": ["<node_internals>/**"],
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "DEBUG": "plebbit-js:*, -plebbit*trace",
                "USE_RPC": "1"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "runtimeVersion": "18",
            "runtimeArgs": ["--es-module-specifier-resolution", "node"],
            "name": "Launch Test Server",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/test/server/test-server.js",
            "console": "integratedTerminal",
            "env": {
                "DEBUG": "plebbit-js:*, -plebbit*trace",
                "USE_RPC": "1"
            }
        },
        {
            "args": [
                "--no-timeouts",
                "--config",
                "${workspaceFolder}/config/.mocharc.json",
                "${workspaceFolder}/rpc/test/node-and-browser/plebbit-ws-server.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Test RPC SERVER",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha.js",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "type": "node",
            "env": {
                "DEBUG": "plebbit-js:*, -plebbit*trace"
            }
        },
        {
            "args": ["--no-timeouts", "--bail", "--config", "${workspaceFolder}/config/.mocharc.json", "${file}"],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Debug current file",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha.js",
            "request": "launch",
            "outFiles": [],
            "resolveSourceMapLocations": null,
            "runtimeArgs": ["--max-old-space-size=18192"],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
                "${workspaceFolder}/dist/browser/**",
                "${workspaceFolder}/test-karma-webpack/**"
            ],
            "type": "node",
            "env": {
                "DEBUG": "plebbit-js:*"
            }
        },
        {
            "args": ["--no-timeouts", "--bail", "--config", "${workspaceFolder}/config/.mocharc.json", "${file}"],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "(RPC) - Debug current file",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha.js",
            "request": "launch",
            "outFiles": [],
            "runtimeArgs": ["--max-old-space-size=18192"],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**",
                "${workspaceFolder}/dist/browser/**",
                "${workspaceFolder}/test-karma-webpack/**"
            ],
            "type": "node",
            "env": {
                "DEBUG": "plebbit-js:*",
                "USE_RPC": "1"
            }
        },

        {
            "args": [
                "--no-timeouts",
                "--bail",
                "--recursive",
                "--config",
                "${workspaceFolder}/config/.mocharc.json",
                "${workspaceFolder}/test/node-and-browser"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Test all Node and browser tests",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/node_modules/mocha/bin/mocha.js",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "runtimeArgs": ["--max-old-space-size=8192"],
            "type": "node",
            "env": {
                "DEBUG": "plebbit-js:*, -plebbit-js*trace"
            }
        }
    ]
}
