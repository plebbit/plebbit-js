{
    "name": "@plebbit/plebbit-js",
    "version": "0.0.3",
    "scripts": {
        "build": "npm run clean && run-s build:node build:browser",
        "build:watch": "concurrently --raw \"tsc --project config/tsconfig.json --watch\" \"node config/build-browser --watch\"",
        "build:node": "tsc --project config/tsconfig.json",
        "build:node:watch": "tsc --project config/tsconfig.json --watch",
        "build:browser": "node config/build-browser",
        "build:browser:watch": "node config/build-browser --watch --debug",
        "webpack": "webpack --mode development --config config/webpack.config.js",
        "webpack:watch": "while true; do webpack watch --mode development --config config/webpack.config.js; sleep 1; done",
        "test": "run-s test:node test:browser",
        "test:node": "mocha --config config/.mocharc.js test/{node,node-and-browser}/**/*.test.js",
        "test:node:parallel": "mocha --parallel --config config/.mocharc.js test/{node,node-and-browser}/**/*.test.js",
        "test:browser": "karma start config/karma.conf.js",
        "test:server": "node test/test-server.js",
        "test:server:wait-on": "wait-on http://localhost:14952",
        "clean": "rimraf dist",
        "prettier": "prettier {src,test,config}/**/*.{js,ts} --write --config config/prettier.config.js",
        "test:prettier": "prettier-check {src,test,config}/**/*.{js,ts} --config config/prettier.config.js"
    },
    "main": "dist/node/index.js",
    "types": "dist/node/index.d.ts",
    "browser": {
        ".": "dist/browser/index.js",
        "./dist/node/index.js": "./dist/browser/index.js",
        "./dist/node": "./dist/browser"
    },
    "files": [
        "dist/"
    ],
    "dependencies": {
        "@keyv/sqlite": "3.5.2",
        "@types/node-fetch": "2.6.2",
        "@types/uuid": "8.3.4",
        "assert": "2.0.0",
        "buffer": "6.0.3",
        "captcha-canvas": "3.1.0",
        "ethers": "5.6.9",
        "form-data": "4.0.0",
        "ipfs-http-client": "56.0.3",
        "jose": "4.8.3",
        "js-sha256": "0.9.0",
        "keyv": "4.3.2",
        "knex": "2.1.0",
        "libp2p-crypto": "0.21.2",
        "peer-id": "0.16.0",
        "sqlite3": "5.0.8",
        "tinycache": "1.1.2",
        "uuid": "8.3.2"
    },
    "devDependencies": {
        "@babel/core": "7.18.6",
        "@babel/plugin-transform-runtime": "7.18.6",
        "@babel/preset-env": "7.18.6",
        "@types/mocha": "9.1.1",
        "@types/node": "18.0.0",
        "@types/url-parse": "1.4.8",
        "babel-loader": "8.2.5",
        "chai": "4.3.6",
        "chai-as-promised": "7.1.1",
        "chokidar": "3.5.3",
        "concurrently": "7.2.2",
        "dotenv": "16.0.1",
        "go-ipfs": "0.13.1",
        "husky": "4.3.8",
        "karma": "6.4.0",
        "karma-chai": "0.1.0",
        "karma-chrome-launcher": "3.1.1",
        "karma-firefox-launcher": "2.1.2",
        "karma-mocha": "2.0.1",
        "karma-parallel": "0.3.1",
        "karma-sinon": "1.0.5",
        "karma-spec-reporter": "0.0.34",
        "lint-staged": "12.3.8",
        "mocha": "10.0.0",
        "npm-run-all": "4.1.5",
        "prettier": "2.7.1",
        "prettier-check": "2.0.0",
        "rimraf": "3.0.2",
        "sinon": "14.0.0",
        "typescript": "4.7.4",
        "wait-on": "6.0.1",
        "webpack": "5.73.0",
        "webpack-cli": "4.10.0",
        "webpack-watch-files-plugin": "1.2.1"
    },
    "lint-staged": {
        "{src,test,config}/**/*.{js,ts}": [
            "prettier --write --config config/prettier.config.js"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "description": "plebbit.js will be an NPM module to wrap around the IPFS APIs used by Plebbit. It will be used in all clients: CLI, Electron (Desktop GUI) and Web.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/plebbit/plebbit-js.git"
    },
    "keywords": [
        "plebbit"
    ],
    "author": "Esteban Abaroa, Rinse",
    "license": "GPL-2.0-only",
    "bugs": {
        "url": "https://github.com/plebbit/plebbit-js/issues"
    },
    "homepage": "https://github.com/plebbit/plebbit-js#readme"
}
