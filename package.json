        "chokidar": "3.5.3",
        "concurrently": "7.5.0",
        "dotenv": "16.0.3",
        "electron": "19.0.1",
        "go-ipfs": "0.18.1",
        "karma": "6.4.1",
        "karma-chai": "0.1.0",
        "karma-chrome-launcher": "3.1.1",
        "karma-electron": "7.3.0",
        "karma-firefox-launcher": "2.1.2",
        "karma-mocha": "2.0.1",
        "karma-parallel": "0.3.1",
        "karma-sinon": "1.0.5",
        "karma-spec-reporter": "0.0.34",
        "mocha": "10.1.0",
        "npm-run-all": "4.1.5",
        "prettier": "2.7.1",
        "prettier-check": "2.0.0",
        "rimraf": "3.0.2",
        "socket.io-client": "4.6.1",
